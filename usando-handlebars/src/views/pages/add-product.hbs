<article>
  <h1>Agregar Nuevo Producto</h1>
  <style>
      * {
        font-family: "Lobster", cursive;
      }
    </style>
  <form action="/products" method="post">
    <label for="title">Título:</label>
    <input type="text" placeholder="Título" name="title" class="mx-2"/>
    <label for="price">Precio:</label>
    <input type="number" placeholder="Precio" name="price" class="mx-2"/>
    <label for="thumbnail">Imagen: </label>
    <input type="text" placeholder="Imagen" name="thumbnail" class="mx-2"/>
    <button>Agregar Producto</button>
  </form>
</article>