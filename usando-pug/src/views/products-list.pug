    body
        nav
            a(href='/' class="btn btn-light") Agregar producto
            a(href='/products-list' class="btn btn-light") Ver lista
        h1='Lista de productos'
        hr
        if productList.length > 0
            div(class="table-responsive")
                table(class="table table-light") 
                    tr 
                        th(scope="col")='Id'
                        th(scope="col")='TÃ­tulo'
